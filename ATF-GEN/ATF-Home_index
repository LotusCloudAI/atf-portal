                <span className="opacity-60">Domain: americantelugufederation.org</span>
              </div>
            </div>
          </footer>
        </div>
      );
    }
    
    // --- Render the App ---
    // This is the bridge between React and the DOM
    
    const container = document.getElementById('root');
    const root = ReactDOM.createRoot(container);
    root.render(<ATFHome />);

  </script>

