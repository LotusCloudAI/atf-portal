                    <a href="#" aria-label="Instagram" className="p-2 rounded-lg bg-white/5 text-slate-300 hover:bg-white/10 hover:text-white transition-colors"><Instagram className="h-5 w-5" /></a>
                    <a href="#" aria-label="LinkedIn" className="p-2 rounded-lg bg-white/5 text-slate-300 hover:bg-white/10 hover:text-white transition-colors"><Linkedin className="h-5 w-5" /></a>
                  </div>
                </div>

                {/* Column 2: Quick Links */}
                <div>
                  <h4 className="font-semibold text-sm text-slate-200 mb-3">{t.quickLinks}</h4>
                  <ul className="space-y-2 text-xs">
                    <li><a href="/news" className="text-slate-400 hover:text-white transition-colors">{getText(CATEGORIES.find(c => c.key === 'news').title)}</a></li>
                    <li><a href="/events" className="text-slate-400 hover:text-white transition-colors">{getText(CATEGORIES.find(c => c.key === 'events').title)}</a></li>
                    <li><a href="/chapters" className="text-slate-400 hover:text-white transition-colors">{getText(CATEGORIES.find(c => c.key === 'chapters').title)}</a></li>
                    <li><a href="/programs" className="text-slate-400 hover:text-white transition-colors">{getText(CATEGORIES.find(c => c.key === 'programs').title)}</a></li>
                  </ul>
                </div>

                {/* Column 3: Legal */}
                <div>
                  <h4 className="font-semibold text-sm text-slate-200 mb-3">{t.legal}</h4>
                  <ul className="space-y-2 text-xs">
                    <li><a href="/privacy" className="text-slate-400 hover:text-white transition-colors">{t.privacy}</a></li>
                    <li><a href="/terms" className="text-slate-400 hover:text-white transition-colors">{t.terms}</a></li>
                    <li><a href="/about/governance" className="text-slate-400 hover:text-white transition-colors">{t.governance}</a></li>
                  </ul>
                </div>

                {/* Column 4: Subscribe */}
                <div>
                  <h4 className="font-semibold text-sm text-slate-200 mb-3">{t.subscribe}</h4>
                  <form className="flex gap-2" onSubmit={(e) => e.preventDefault()}>
                    <label className="sr-only" htmlFor="email-subscribe">{t.yourEmail}</label>
