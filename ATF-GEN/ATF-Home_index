                    key={i} 
                    href={`/news/${i}`} 
                    className="group rounded-2xl overflow-hidden border border-white/10 hover:border-cyan-400/40 transition-colors bg-white/5"
                  >
                    {/* Placeholder for image */}
                    <div className="aspect-[16/9] bg-gradient-to-br from-slate-700 to-slate-800 group-hover:opacity-90 transition-opacity">
                      {/* In a real app: <img src="..." alt="..." className="w-full h-full object-cover" /> */}
                    </div>
                    <div className="p-4">
                      <div className="text-sm font-medium">
                        {t.sampleHeadline} {i}
                      </div>
                      <p className="mt-1 text-xs text-slate-300">
