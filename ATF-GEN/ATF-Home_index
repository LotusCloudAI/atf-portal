            <div className="mx-auto max-w-7xl px-4 py-3 flex items-center gap-3">
              <div className="flex items-center gap-2">
                <Landmark className="h-6 w-6 text-cyan-400" />
                <div>
                  <div className="font-semibold leading-tight">{t.siteName}</div>
                  <div className="text-xs text-slate-300">{t.tagline}</div>
                </div>
              </div>

              {/* Utility Links (from Home-Page.html) */}
              <div className="hidden md:flex items-center gap-4 ml-auto">
                <a href="/membership" className="flex items-center gap-1.5 text-xs text-slate-300 hover:text-white transition-colors">
                  <UserCheck className="h-4 w-4" />
                  {t.memberPortal}
                </a>
                <a href="/admin" className="flex items-center gap-1.5 text-xs text-slate-300 hover:text-white transition-colors">
                  <Shield className="h-4 w-4" />
                  {t.adminPortal}
                </a>
              </div>
              
              {/* Search */}
              <div className="hidden md:block w-full max-w-xs ml-4">
                <label className="relative block">
                  <span className="sr-only">{t.search}</span>
                  <span className="absolute inset-y-0 left-0 flex items-center pl-3">
                    <Search className="h-4 w-4 text-slate-400" />
                  </span>
                  <input
                    type="text"
                    placeholder={t.search}
                    className="w-full rounded-xl bg-white/5 border border-white/10 pl-10 pr-4 py-2 text-sm placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-cyan-500/60"
                  />
                </label>
              </div>
              
              {/* Lang toggle */}
              <button
                onClick={() => setLang((p) => (p === "en" ? "te" : "en"))}
                className="ml-3 inline-flex items-center gap-2 rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm hover:bg-white/10 transition-colors flex-shrink-0"
              >
                <Globe className="h-4 w-4" />
                <span>{lang === "en" ? "తెలుగు" : "English"}</span>
              </button>
