          {/* Hero */}
          <section className="mx-auto max-w-7xl px-4 pt-8">
            <div className="rounded-3xl bg-[radial-gradient(60%_100%_at_10%_0%,rgba(0,212,255,0.15),rgba(0,0,0,0)),radial-gradient(60%_100%_at_90%_0%,rgba(255,0,204,0.10),rgba(0,0,0,0))] border border-white/10 p-6 md:p-10">
              <div className="flex flex-col md:flex-row md:items-center gap-6">
                <div className="flex-1">
                  <h1 className="text-2xl md:text-4xl font-semibold tracking-tight">{t.siteName}</h1>
                  <p className="mt-2 text-slate-300 max-w-2xl">
                    {t.heroBlurb}
                  </p>
                </div>
                <div className="grid grid-cols-2 gap-3 w-full md:w-auto">
                  <a href="/membership" className="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-center hover:bg-white/10 transition-colors">{t.becomeMember}</a>
                  <a href="/donate" className="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-center hover:bg-white/10 transition-colors">{t.donate}</a>
                </div>
              </div>
            </div>
          </section>
          
          {/* Tile grid */}
          <main className="mx-auto max-w-7xl px-4 py-8">
            <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
              
              {CATEGORIES.map((c) => {
                const Icon = c.icon;
                return (
                  <div 
                    key={c.key} 
                    className={`group relative rounded-2xl border border-white/10 ${c.color} p-4 hover:border-cyan-400/40 hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-200 flex flex-col`}
                  > 
                    <a href={c.href} className="block flex-grow"> {/* Make main content a link */}
                      <div className="flex items-start gap-3">
